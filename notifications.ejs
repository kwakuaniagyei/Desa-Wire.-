<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desa Wire - Notifications</title>
    <link rel="icon" type="image/png" href="/img/icon.png">
    <script src="/js/chat-widget.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            min-height: 100vh;
            padding: 20px;
        }

        .notifications-card {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .notifications-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 24px 24px 16px 24px;
            border-bottom: 1px solid #f0f0f0;
        }

        .notifications-title {
            font-size: 24px;
            font-weight: 700;
            color: #2d3748;
        }

        .mark-all-read {
            color: #3182ce;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: color 0.2s;
        }

        .mark-all-read:hover {
            color: #2c5282;
            text-decoration: underline;
        }

        .filter-tabs {
            display: flex;
            padding: 16px 24px;
            gap: 8px;
            border-bottom: 1px solid #f0f0f0;
        }

        .filter-tab {
            background: #f8f9fa;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            color: #6c757d;
            cursor: pointer;
            transition: all 0.2s;
        }

        .filter-tab:hover {
            background: #e9ecef;
            color: #495057;
        }

        .filter-tab.active {
            background: #6366f1;
            color: white;
        }

        .notifications-content {
            min-height: 400px;
            padding: 40px 24px;
        }

        .notification-item {
            padding: 16px 0;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: background 0.2s;
        }

        .notification-item:hover {
            background: #f8f9fa;
        }

        .notification-item.unread {
            background: #f0f9ff;
        }

        .notification-item.unread::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 4px;
            background: #3182ce;
            border-radius: 50%;
        }

        .notification-content {
            display: flex;
            align-items: flex-start;
            gap: 16px;
        }

        .notification-icon-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #f7fafc;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            flex-shrink: 0;
        }

        .notification-icon-circle.people { background: #e6fffa; color: #319795; }
        .notification-icon-circle.project { background: #ebf8ff; color: #3182ce; }
        .notification-icon-circle.account { background: #f0fff4; color: #38a169; }
        .notification-icon-circle.task { background: #fef5e7; color: #d69e2e; }
        .notification-icon-circle.form { background: #faf5ff; color: #805ad5; }
        .notification-icon-circle.alert { background: #fed7d7; color: #e53e3e; }

        .notification-details {
            flex: 1;
        }

        .notification-title {
            font-size: 16px;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 4px;
        }

        .notification-message {
            font-size: 14px;
            color: #718096;
            line-height: 1.5;
            margin-bottom: 8px;
        }

        .notification-meta {
            display: flex;
            align-items: center;
            gap: 16px;
            font-size: 12px;
            color: #a0aec0;
        }

        .notification-time {
            font-weight: 500;
        }

        .notification-project {
            background: #f7fafc;
            padding: 2px 8px;
            border-radius: 12px;
            color: #4a5568;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #a0aec0;
        }

        .empty-state-icon {
            font-size: 80px;
            margin-bottom: 24px;
            opacity: 0.8;
            color: #f6ad55;
        }

        .empty-state-message {
            font-size: 18px;
            font-weight: 500;
            color: #6c757d;
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .notifications-card {
                margin: 0;
            }

            .notifications-header {
                padding: 20px 16px 12px 16px;
            }

            .filter-tabs {
                padding: 12px 16px;
                flex-wrap: wrap;
            }

            .notifications-content {
                padding: 30px 16px;
            }

            .notifications-title {
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="notifications-card">
        <div class="notifications-header">
            <div class="notifications-title">Notifications</div>
            <a href="#" class="mark-all-read" onclick="markAllAsRead()">Mark all as read</a>
        </div>

        <div class="filter-tabs">
            <button class="filter-tab active" data-filter="all">All</button>
            <button class="filter-tab" data-filter="people">People</button>
            <button class="filter-tab" data-filter="project">Project</button>
            <button class="filter-tab" data-filter="account">Account</button>
            <button class="filter-tab" data-filter="alerts">Alerts</button>
            <button class="filter-tab" data-filter="tasks">Tasks</button>
            <button class="filter-tab" data-filter="forms">Forms</button>
        </div>

        <div class="notifications-content" id="notificationsContent">
            <% if (notifications && notifications.length > 0) { %>
                <% notifications.forEach(notification => { %>
                    <div class="notification-item <%= notification.unread ? 'unread' : '' %>" data-notification-id="<%= notification.id %>" onclick="markAsRead(<%= notification.id %>)">
                        <div class="notification-content">
                            <div class="notification-icon-circle <%= notification.type.toLowerCase() %>">
                                <% if (notification.type === 'People') { %>üë§<% } %>
                                <% if (notification.type === 'Project') { %>üìÅ<% } %>
                                <% if (notification.type === 'Account') { %>‚öôÔ∏è<% } %>
                                <% if (notification.type === 'Tasks') { %>‚úÖ<% } %>
                                <% if (notification.type === 'Forms') { %>üìù<% } %>
                                <% if (notification.type === 'Alerts') { %>‚ö†Ô∏è<% } %>
                                <% if (notification.type === 'Plans') { %>üìã<% } %>
                            </div>
                            <div class="notification-details">
                                <div class="notification-title"><%= notification.title %></div>
                                <div class="notification-message"><%= notification.message %></div>
                                <div class="notification-meta">
                                    <span class="notification-time"><%= notification.time %></span>
                                    <% if (notification.project) { %>
                                        <span class="notification-project"><%= notification.project %></span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">üîî</div>
                    <div class="empty-state-message">No notifications</div>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Global variables
        let notifications = <% if (notifications) { %><%- JSON.stringify(notifications) %><% } else { %>[]<% } %>;
        let currentFilter = 'all';

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            initializeEventListeners();
        });

        function initializeEventListeners() {
            // Filter tabs
            const filterTabs = document.querySelectorAll('.filter-tab');
            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    filterTabs.forEach(t => t.classList.remove('active'));
                    // Add active class to clicked tab
                    this.classList.add('active');
                    // Update current filter
                    currentFilter = this.dataset.filter;
                    // Filter notifications
                    filterNotifications();
                });
            });
        }

        function filterNotifications() {
            let filteredNotifications = [...notifications];
            
            // Filter by type
            if (currentFilter !== 'all') {
                filteredNotifications = filteredNotifications.filter(n => 
                    n.type.toLowerCase() === currentFilter
                );
            }
            
            renderNotifications(filteredNotifications);
        }

        function renderNotifications(notificationsToRender) {
            const container = document.getElementById('notificationsContent');
            
            if (notificationsToRender.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üîî</div>
                        <div class="empty-state-message">No notifications</div>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = notificationsToRender.map(notification => `
                <div class="notification-item ${notification.unread ? 'unread' : ''}" data-notification-id="${notification.id}" onclick="markAsRead(${notification.id})">
                    <div class="notification-content">
                        <div class="notification-icon-circle ${notification.type.toLowerCase()}">
                            ${getNotificationIcon(notification.type)}
                        </div>
                        <div class="notification-details">
                            <div class="notification-title">${notification.title}</div>
                            <div class="notification-message">${notification.message}</div>
                            <div class="notification-meta">
                                <span class="notification-time">${notification.time}</span>
                                ${notification.project ? `<span class="notification-project">${notification.project}</span>` : ''}
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function getNotificationIcon(type) {
            const icons = {
                'People': 'üë§',
                'Project': 'üìÅ',
                'Account': '‚öôÔ∏è',
                'Tasks': '‚úÖ',
                'Forms': 'üìù',
                'Alerts': '‚ö†Ô∏è',
                'Plans': 'üìã'
            };
            return icons[type] || 'üì¢';
        }

        function markAsRead(notificationId) {
            const notification = notifications.find(n => n.id === notificationId);
            if (notification && notification.unread) {
                notification.unread = false;
                filterNotifications();
                
                // Update on server
                fetch(`/notifications/${notificationId}/read`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).catch(error => {
                    console.error('Error marking notification as read:', error);
                });
            }
        }

        function markAllAsRead() {
            // Mark all notifications as read
            notifications.forEach(notification => {
                notification.unread = false;
            });
            
            // Update display
            filterNotifications();
            
            // Update on server
            fetch('/notifications/read-all', {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).catch(error => {
                console.error('Error marking all notifications as read:', error);
            });
        }
    </script>
</body>
</html>