        // Initialize the interface
        document.addEventListener('DOMContentLoaded', function() {
            initializeCounts();
            loadNotifications();

            // Notification bell functionality
            const notificationBell = document.getElementById('notificationBell');
            if (notificationBell) {
                notificationBell.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const panel = document.getElementById('notificationPanel');
                    const helpPanel = document.getElementById('helpPanel');
                    const userDropdown = document.getElementById('userDropdown');

                    if (helpPanel) helpPanel.classList.remove('show');
                    if (userDropdown) userDropdown.classList.remove('show');
                    if (panel) {
                        panel.classList.toggle('show');
                        if (panel.classList.contains('show')) {
                            renderNotifications();
                        }
                    }
                });
            }

            // Help icon functionality
            const helpIcon = document.getElementById('helpIcon');
            if (helpIcon) {
                helpIcon.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const panel = document.getElementById('helpPanel');
                    const notificationPanel = document.getElementById('notificationPanel');
                    const userDropdown = document.getElementById('userDropdown');

                    if (notificationPanel) notificationPanel.classList.remove('show');
                    if (userDropdown) userDropdown.classList.remove('show');
                    if (panel) panel.classList.toggle('show');
                });
            }

            // Close panels when clicking outside
            document.addEventListener('click', function(event) {
                const notificationPanel = document.getElementById('notificationPanel');
                const helpPanel = document.getElementById('helpPanel');
                const notificationBellElem = document.getElementById('notificationBell');
                const helpIconElem = document.getElementById('helpIcon');

                if (notificationPanel && notificationBellElem) {
                    if (!notificationBellElem.contains(event.target) && !notificationPanel.contains(event.target)) {
                        notificationPanel.classList.remove('show');
                    }
                }

                if (helpPanel && helpIconElem) {
                    if (!helpIconElem.contains(event.target) && !helpPanel.contains(event.target)) {
                        helpPanel.classList.remove('show');
                    }
                }
            });

            // Role change functionality (admin only)
            const roleSelectors = document.querySelectorAll('.role-selector');
            roleSelectors.forEach(select => {
                select.addEventListener('change', async function(e) {
                    const personId = this.getAttribute('data-person-id');
                    const personEmail = this.getAttribute('data-person-email');
                    const newRole = this.value;
                    const oldRole = this.dataset.oldRole || 'Unknown';

                    // Store old role for potential rollback
                    if (!this.dataset.oldRole) {
                        this.dataset.oldRole = Array.from(this.options).find(opt => opt.selected).value;
                    }

                    // Confirm role change
                    const confirmMessage = `Change role to "${newRole}" for user with email ${personEmail}?`;
                    if (!confirm(confirmMessage)) {
                        // Revert selection
                        this.value = this.dataset.oldRole;
                        return;
                    }

                    // Disable dropdown during update
                    this.disabled = true;
                    this.style.opacity = '0.6';

                    try {
                        const response = await fetch(`/people/${personId}/role`, {
                            method: 'PATCH',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ role: newRole })
                        });

                        const result = await response.json();

                        if (result.status === 'success') {
                            // Update stored old role
                            this.dataset.oldRole = newRole;

                            // Show success message
                            alert(`‚úÖ Role updated successfully to "${newRole}"`);

                            // Reload notifications
                            loadNotifications();
                        } else {
                            // Revert on error
                            this.value = this.dataset.oldRole;
                            alert(`‚ùå Failed to update role: ${result.message}`);
                        }
                    } catch (error) {
                        console.error('Error updating role:', error);
                        // Revert on error
                        this.value = this.dataset.oldRole;
                        alert('‚ùå An error occurred while updating the role. Please try again.');
                    } finally {
                        // Re-enable dropdown
                        this.disabled = false;
                        this.style.opacity = '1';
                    }
                });

                // Store initial role
                select.dataset.oldRole = select.value;
            });
        });
    </script>
